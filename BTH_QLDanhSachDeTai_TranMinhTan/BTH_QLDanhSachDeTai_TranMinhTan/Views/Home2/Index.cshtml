@model IEnumerable<BTH_QLDanhSachDeTai_TranMinhTan.Models.Class1>

@{
    ViewBag.Title = "Index";
}


<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <table class="table table-dark" style="width:40%">
        <tr>
            <td>
                @Html.ActionLink("Thêm mới", "ThemHuongDanDeTai")
            </td>
            <td>
                @Html.ActionLink("Clear", "Clear")
            </td>
            <td>
                @Html.ActionLink("Nhập KQ", "Clear")
            </td>
            <td>
                @Html.ActionLink("In", "Report")
            </td>
            <td>
                @Html.ActionLink("Xuất Excel", "XuatExcel")
            </td>
            <td>
                @Html.ActionLink("Đóng", "Dong")
            </td>
        </tr>
    </table>

    <center style="font-size: 28px; font-weight: 700;">QUẢN LÝ HƯỚNG DẪN ĐỀ TÀI</center>
    <div>
        @Html.Action("TimKiem", "Home2")
    </div>
    <h4>Danh sách</h4>
    <table class="table ">
        <tr>
            <th>
                Mã khoa
            </th>
            <th>
                Mã SV
            </th>
            <th>
                Họ tên SV
            </th>
            <th>
                Mã GV
            </th>
            <th>
                Họ tên GV
            </th>
            <th>
                Mã đề tài
            </th>
            <th>
                Tên đề tài
            </th>
            <th>
                Kết quả
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sinhvien.Makhoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sinhvien.Masv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sinhvien.Hotensv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.giangvien.Magv)
                <td>
                    @Html.DisplayFor(modelItem => item.giangvien.Hotengv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.detai.Madt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.detai.Tendt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.huongdan.KetQua)
                </td>
                <td>
                    @Html.ActionLink("Xóa", "XoaHuongDanDeTai", new { masv = item.huongdan.Masv }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Nhập KQ", "SuaHuongDanDeTai", new { masv = item.huongdan.Masv }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
