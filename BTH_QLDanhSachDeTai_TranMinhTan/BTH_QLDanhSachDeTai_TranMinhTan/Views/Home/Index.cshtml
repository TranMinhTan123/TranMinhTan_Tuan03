@model IEnumerable<BTH_QLDanhSachDeTai_TranMinhTan.Models.TBLDeTai>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <table class="table table-dark" style="width:35%">
        <tr>
            <td>
                @Html.ActionLink("Thêm đề tài", "ThemDeTai")
            </td>
            <td>
                @Html.ActionLink("Clear", "Clear")
            </td>
            <td>
                @Html.ActionLink("In", "In")
            </td>
            <td>
                @Html.ActionLink("Xuất Excel", "XuatExcel")
            </td>
            <td>
                @Html.ActionLink("Đóng", "Dong")
            </td>
        </tr>
    </table>

    <center style="font-size: 28px; font-weight: 700;">QUẢN LÝ DANH SÁCH ĐỀ TÀI</center>
    <div>
        @Html.Action("TimKiem", "Home")
    </div>
    <h4>Danh sách</h4>
    <table class="table ">
        <tr>
            <th>
                Mã đề tài
            </th>
            <th>
                Tên đề tài
            </th>
            <th>
                Kinh phí
            </th>
            <th>
                Nơi thực tập
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Madt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tendt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kinhphi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Noithuctap)
                </td>
                <td>
                    @Html.ActionLink("Xóa", "XoaDeTai", new { madt = item.Madt }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Sửa", "SuaDeTai", new { madt = item.Madt }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>

